{
  "name": "shkva-backend",
  "version": "1.0.0",
  "description": "Backend API for SHKVA School Management System",
  "main": "app.js",
  "scripts": {
    "start": "npm run seed:admin && npm run seed:users && node app.js",
    "dev": "nodemon app.js",
    "build": "npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "seed:admin": "node seeds/createAdmin.js",
    "seed:users": "node seeds/createSampleUsers.js",
    "seed:all": "npm run seed:admin && npm run seed:users",
    "production": "NODE_ENV=production node app.js",
    "deploy": "npm run build && npm run seed:all && npm start"
  },
  "keywords": [
    "school",
    "management",
    "education",
    "api"
  ],
  "author": "SHKVA Development Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
